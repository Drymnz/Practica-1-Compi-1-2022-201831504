<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_Reportes">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_gravity="center"
                android:text="@string/titulo_reportes_mate"
                android:textSize="16sp" />

            <TableLayout
                android:id="@+id/reporte_operacional"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:stretchColumns="0,1,2,3,4">

                <TableRow>

                    <TextView
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Operador" />

                    <TextView
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Linea" />

                    <TextView
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Columna" />

                    <TextView
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Ocurrencia"
                        android:textSize="16dp" />
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_gravity="center"
                android:text="@string/titulo_reportes_definidos" />

            <TableLayout
                android:id="@+id/reporte_definidos"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <TableRow>

                    <TextView
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="Objeto"
                        android:textSize="16dp" />

                    <TextView
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="Cantidad de definiciones"
                        android:textSize="16dp" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="Barras"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/num_bar_report"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="0"
                        android:textSize="16dp" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="Pie"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/num_pie_report"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="0"
                        android:textSize="16dp" />

                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>